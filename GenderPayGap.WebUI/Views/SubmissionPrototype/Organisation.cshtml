@using GovUkDesignSystem
@using GovUkDesignSystem.GovUkDesignSystemComponents

@{
    ViewBag.Title = $"SOFTWIRE TECHNOLOGY LIMITED - My organisations - Gender pay gap service";
    Layout = "~/Views/GovUkFrontend/GovUkFrontendLayout.cshtml";
}

@section BeforeMain {
    @{
        var crumbs = new List<CrumbViewModel>
        {
            new CrumbViewModel
            {
                Text = "My organisations",
                Href = Url.Action("MyOrganisations")
            },
            new CrumbViewModel
            {
                Text = "SOFTWIRE TECHNOLOGY LIMITED",
            }
        };
    }

    @(Html.GovUkBreadcrumbs(new BreadcrumbsViewModel
    {
        Crumbs = crumbs
    }))
}


<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">

        <h1 class="govuk-heading-xl">
            Reporting years
            <br />
            <span class="govuk-!-font-size-27">
                for SOFTWIRE TECHNOLOGY LIMITED
            </span>
        </h1>
        
        <table class="govuk-table">
            <tbody class="govuk-table__body">
                <tr class="govuk-table__row">
                    <td class="govuk-table__cell">
                        <a href="@(Url.Action("OrganisationDetailsForYear", new { id = 123, year = 2020 }))"
                           class="govuk-link">
                            Reporting year 2020-21
                        </a>
                    </td>
                    <td class="govuk-table__cell">
                        <strong class="govuk-tag" style="border: 2px solid #1d70b8; background-color:#1d70b8;">
                            Action required by 4 April 2021
                        </strong>
                    </td>
                </tr>
                <tr class="govuk-table__row">
                    <td class="govuk-table__cell">
                        <a href="@(Url.Action("OrganisationDetailsForYear", new { id = 123, year = 2019 }))"
                           class="govuk-link">
                            Reporting year 2019-20
                        </a>
                    </td>
                    <td class="govuk-table__cell">
                        <strong class="govuk-tag" style="border: 2px solid #d4351c; background-color:#d4351c;">
                            Overdue
                        </strong>
                    </td>
                </tr>
                <tr class="govuk-table__row">
                    <td class="govuk-table__cell">
                        <a href="@(Url.Action("OrganisationDetailsForYear", new { id = 123, year = 2018 }))"
                           class="govuk-link">
                            Reporting year 2018-19
                        </a>
                    </td>
                    <td class="govuk-table__cell">
                        <strong class="govuk-tag" style="border: 2px solid #00703c; background-color:#00703c;">
                            No action required
                        </strong>
                    </td>
                </tr>
                <tr class="govuk-table__row">
                    <td class="govuk-table__cell">
                        <a href="@(Url.Action("OrganisationDetailsForYear", new { id = 123, year = 2017 }))"
                           class="govuk-link">
                            Reporting year 2017-18
                        </a>
                    </td>
                    <td class="govuk-table__cell">
                        <strong class="govuk-tag" style="border: 2px solid #00703c; background-color:#00703c;">
                            No action required
                        </strong>
                    </td>
                </tr>
            </tbody>
        </table>

    </div>
</div>
