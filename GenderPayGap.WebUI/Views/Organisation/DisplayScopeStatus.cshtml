@using GenderPayGap.Core
@using GenderPayGap.Core.Helpers
@model dynamic
@{
    ScopeStatuses scopeStatus = Model.scopeStatus;
    DateTime accountingDate = Model.accountingDate;
    DateTime endDate = ReportingYearsHelper.GetDeadlineForAccountingDate(accountingDate);
}
@if (!scopeStatus.IsAny(ScopeStatuses.OutOfScope, ScopeStatuses.PresumedOutOfScope))
{
    <strong>Required to report before @(endDate.ToFriendlyDate())</strong>
}
else
{
    <strong>Not required to report for @(accountingDate.Year) to @(endDate.Year)</strong>
}