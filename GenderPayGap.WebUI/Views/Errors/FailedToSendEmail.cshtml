@using GenderPayGap.Core
@model GenderPayGap.WebUI.ErrorHandling.FailedToSendEmailException

@{
    ViewBag.Title = "Failed to send email - Gender pay gap service";
    Layout = "~/Views/GovUkFrontend/GovUkFrontendLayout.cshtml";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-xl">
            Failed to send email
        </h1>

        <p class="govuk-body">
            We were unable to send an email to @Model.EmailAddress. Please email 
            <a href="mailto:@(Global.GpgReportingEmail)" class="govuk-link">@(Global.GpgReportingEmail)</a> 
            for assistance.
        </p>
        
    </div>
</div>


