@using (Html.BeginForm("SearchResults", "Viewing", FormMethod.Get, new {id = "FinderForm"}))
{
    <div class="form-group">
        <div class="gov-uk-c-searchbar">
            <div class="gov-uk-l-searchbar__table">
                <label class="govuk-visually-hidden" for="organisation-search">Search by organisation</label>
                <div class="gov-uk-l-searchbar__cell autocomplete-wrapper" id="organisation-search">
                    <!-- This div will be populated by an accessible-autocomplete component for the search bar -->
                    <!-- The component is created by the `generateOrganisationSearchbar` function in Index.cshtml -->
                </div>
                <div class="gov-uk-l-searchbar__cell">
                    <button class="gov-uk-c-searchbar__submit gov-uk-c-searchbar__submit--black" id="NextStep" type="submit">
                        <svg class="svg" xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="5 2 30 30">
                            <path d="M25.7 24.8L21.9 21c.7-1 1.1-2.2 1.1-3.5 0-3.6-2.9-6.5-6.5-6.5S10 13.9 10 17.5s2.9 6.5 6.5 6.5c1.6 0 3-.6 4.1-1.5l3.7 3.7 1.4-1.4zM12 17.5c0-2.5 2-4.5 4.5-4.5s4.5 2 4.5 4.5-2 4.5-4.5 4.5-4.5-2-4.5-4.5z" 
                                  />
                        </svg>
                        Search
                    </button>
                </div>
            </div>
        </div>
    </div>
}