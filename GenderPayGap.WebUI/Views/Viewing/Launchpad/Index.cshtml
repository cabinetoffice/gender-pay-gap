@using GenderPayGap.Core
@using GenderPayGap.WebUI.Controllers.Guidance
@{
    ViewBag.Title = "Search and compare gender pay gap data - GOV.UK";
    ViewBag.pageDescription = "Find and compare gender pay gap information reported by employers. Learn more about the gender pay gap and how to close it.";
    ViewBag.pageClass = "landing-page";
    var controller = ViewData["Controller"] as ViewingController;
}

@section PreMain {
    <div class="hero-container" role="search">
        <div class="hero font-small">
            <div class="grid-row">
                <div class="column-two-thirds">
                    <h1 class="heading-xlarge">
                        Search and compare gender pay gap data
                    </h1>
                    <p>
                        Employers with 250 or more employees have published their figures comparing men and women&rsquo;s average pay across the organisation.
                    </p>
                    <partial name="Launchpad/Parts/SearchByOrganisation"/>
                </div>
            </div>
            <div class="grid-row related">
                <div class="column-two-thirds">
                    <partial name="Launchpad/Parts/RelatedContent"/>
                </div>
            </div>
        </div>
    </div>
}

<partial name="/Views/Components/NotificationBanner.cshtml"/>

<div class="heading-medium" style="margin-bottom: 0.12em;">
    Prepare and report your gender pay gap data
</div>

@{
    // We deal with the feature flag in the controller
    var reportingUrl = Url.Action("ManageOrganisationsGet", "ManageOrganisations");
}

<div class="grid-row">
    <div class="column-three-thirds">
        <div class="column-one-third">
            <div class="heading-small">
                <a href="@Global.GpgGuidanceLink">Guidance on gender pay gap reporting for employers</a>
            </div>
            Step-by-step guidance on preparing your gender pay gap information
        </div>
        <div class="column-one-third">
            <div class="heading-small">
                <a href="@(Global.StartUrl ?? reportingUrl)" rel="noopener">Submit your gender pay gap information</a>
            </div>
            For employers to sign in, or create an account, and report gender pay gap information
        </div>
    </div>
</div>

<div class="heading-medium" style="margin-bottom: 0;">
    Understanding the gender pay gap
</div>
<div class="grid-row">
    <div class="column-three-thirds">
        <div class="column-one-third">
            <div class="heading-small">
                <a href="@Url.Action(nameof(EightWaysGuidanceController.EightWaysOverview), "EightWaysGuidance")">
                    Eight ways to understand your organisationâ€™s gender pay gap
                </a>
            </div>
            Identify potential causes of the gender pay gap in your organisation
        </div>
    </div>
</div>

<div class="heading-medium" style="margin-bottom: 0;">
    Closing the gender pay gap
</div>
<div class="grid-row">
    <div class="column-three-thirds">
        <div class="column-one-third">
            <div class="heading-small">
                <a href="@Url.Action("Overview", "ActionHub")">Actions to close the gap</a>
            </div>
            Recommended actions for employers that make a difference
        </div>

        <div class="column-one-third">
            <div class="heading-small">
                <a rel="download track" data-track-category="relatedLinkClicked" data-track-action="1.1 Related content" data-track-label="/public/assets/pdf/action-plan-guidance.pdf" data-track-options="{&quot;dimension28&quot;:&quot;1&quot;,&quot;dimension29&quot;:&quot;Action plan guidance&quot;}" href="/public/assets/pdf/action-plan-guidance.pdf">Four steps to developing a gender pay gap action plan<span class="visually-hidden"> (pdf download - 288 KB)</span></a>
            </div>
            A step by step guide for employers to develop an effective action plan
        </div>

    </div>
</div>
<hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">
<partial name="Launchpad/Parts/ServiceSurveyIntroAndLink" />

@section Scripts {
    <script type="text/javascript">
        document.addEventListener("DOMContentLoaded", function(){
          generateOrganisationSearchbar('#organisation-search', 'organisation-search');
        });
                
        new GOVUK.analyticsPlugins.downloadLinkTracker({ selector: 'a[rel="download"]' });
    </script>
}