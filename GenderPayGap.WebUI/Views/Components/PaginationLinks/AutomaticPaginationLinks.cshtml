@using GenderPayGap.WebUI.Views.Components.PaginationLinks
@model GenderPayGap.WebUI.Views.Components.PaginationLinks.PaginationPages

@{

    if (Model.GetCurrentPageIndex() != -1)
    {
        GpgPaginationLinkViewModel leftLink = null;
        if (Model.GetCurrentPageIndex() - 1 >= 0)
        {
            PaginationPage leftPage = Model.Pages[Model.GetCurrentPageIndex() - 1];
            leftLink = new GpgPaginationLinkViewModel
            {
                Title = "Previous",
                Text = leftPage.Title,
                Url = leftPage.Url
            };
        }

        GpgPaginationLinkViewModel rightLink = null;
        if (Model.GetCurrentPageIndex() + 1 < Model.Pages.Count)
        {
            PaginationPage rightPage = Model.Pages[Model.GetCurrentPageIndex() + 1];
            rightLink = new GpgPaginationLinkViewModel
            {
                Title = "Next",
                Text = rightPage.Title,
                Url = rightPage.Url
            };
        }

        await Html.RenderPartialAsync("/Views/Components/PaginationLinks/PaginationLinks.cshtml", new GpgPaginationLinksViewModel
        {
            LeftLink = leftLink,
            RightLink = rightLink
        });
    }

}
