@using GenderPayGap.WebUI.Views.Components
@model GenderPayGap.WebUI.Views.Components.PaginationLinkViewModel
<a href="@(Model.Url)" class="govuk-link pagination-link @(Model.ArrowDirection == ArrowDirection.Left ? "left-arrow" : "right-arrow")">
    <div class="pagination-link-wrapper">
        <span class="pagination-link-title">
            <svg
                class="pagination-link-icon"
                xmlns="http://www.w3.org/2000/svg"
                height="13"
                width="17"
                viewBox="0 0 17 13">
                @if (Model.ArrowDirection == ArrowDirection.Left)
                {
                    <path
                        fill="currentColor"
                        transform="rotate(180 8.5 6.5)"
                        d="m10.107-0.0078125-1.4136 1.414 4.2926 4.293h-12.986v2h12.896l-4.1855 3.9766 1.377 1.4492 
                6.7441-6.4062-6.7246-6.7266z">
                    </path>
                }
                @if (Model.ArrowDirection == ArrowDirection.Right)
                {
                    <path
                        fill="currentColor"
                        d="m10.107-0.0078125-1.4136 1.414 4.2926 4.293h-12.986v2h12.896l-4.1855 3.9766 1.377 1.4492 
                6.7441-6.4062-6.7246-6.7266z">
                    </path>
                }
            </svg>
            <span class="pagination-link-text">
                @Model.Title
            </span>
        </span>
        <span class="pagination-link-label">@(Model.Text)</span>
    </div>
</a>
