@model List<GenderPayGap.Database.Return>
@{
    var title = "Submitted reports with invalid quarters figures";

    ViewBag.Title = $"{title} - Administration - Gender pay gap service";
    Layout = "~/Views/GovUkFrontend/GovUkFrontendLayout.cshtml";
}

@section BeforeMain {
    <partial name="~/Views/AdminDatabaseIntegrityChecks/DatabaseIntegrityChecksBreadcrumbs.cshtml" model="title"/>
}

<span class="govuk-caption-xl">Database integrity checks</span>
<h1 class="govuk-heading-xl">@title</h1>

<p class="govuk-body">
    This shows submitted reports that contain invalid hourly pay quarter figures. The following rules are in place:
    <ul class="govuk-list govuk-list--bullet">
        <li>
            the percentage of men and women in each hourly pay quarter should be between 0 and 100 inclusive
        </li>
        <li>
            the figures should not be provided if the employer opted out of reporting pay quarters
        </li>
    </ul>
</p>

@if (!Model.Any())
{
    <div class="govuk-body">
        No reports
    </div>
}
else
{
    <h2 class="govuk-heading-m">@(Model.Count) reports with invalid hourly pay quarter figures</h2>
    <partial name="ReturnsTable.cshtml" model="Model"/>
}
