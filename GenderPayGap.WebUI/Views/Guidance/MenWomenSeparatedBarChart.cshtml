@model GenderPayGap.WebUI.Models.Guidance.GuidanceBarChartViewModel

<div class="horizontal-bar-chart">
    <p class="govuk-body govuk-!-margin-bottom-2">
        @Model.Title
    </p>

    <div class="horizontal-bar-chart__bar horizontal-bar-chart__bar--narrow horizontal-bar-chart__bar--empty">
        <div class="horizontal-bar-chart__bar horizontal-bar-chart__bar--women"
             style="width: @(Math.Round(Model.Female))%">
        </div>
    </div>

    <p class="govuk-body govuk-!-font-weight-bold govuk-!-margin-top-1">
        <span>
            @(Model.FemaleFormatted)%
            <span class="govuk-visually-hidden"> of the @Model.Title.ToLower() are </span>
            women
        </span>
    </p>

    <div class="horizontal-bar-chart__bar horizontal-bar-chart__bar--narrow horizontal-bar-chart__bar--empty">
        <div class="horizontal-bar-chart__bar horizontal-bar-chart__bar--men"
             style="width: @(Math.Round(Model.Male))%">
        </div>
    </div>

    <p class="govuk-body govuk-!-font-weight-bold govuk-!-margin-top-1 govuk-!-margin-bottom-9">
        <span>
            @(Model.MaleFormatted)%
            <span class="govuk-visually-hidden"> of the @Model.Title.ToLower() are </span>
            men
        </span>
    </p>
</div>
