@{
    var ClientName = "Gender pay gap reporting service";
    ViewBag.Title = $"Sign out - {ClientName} - GOV.UK";
}

<div class="grid-row">
    <div class="column-two-thirds">
        <div class="govuk-box-highlight">
            <h1 class="bold-large">Signed Out</h1>
        </div>
        <p>You are now signed out of the <span>@ClientName</span>.</p>

        <div>
            <div class="subsection panel-indent">
                <div class="bold-small">Click the button below to return to the <span>@ClientName</span>.</div>
            </div>

            <p></p>
            <a class="button" href="@Url.Action("Index", "Viewing")" role="button">Continue</a>
        </div>
    </div>
</div>