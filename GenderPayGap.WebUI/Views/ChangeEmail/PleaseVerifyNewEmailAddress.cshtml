@using GenderPayGap.WebUI.Helpers
@model string

@{
    ViewBag.Title = "Change email address - My Account - Gender pay gap service";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-xl">
            Change email address
        </h1>

        <p class="govuk-body">
            We have sent a verification email to your new email address,
            <span class="govuk-!-font-weight-bold">@(Model)</span>
        </p>
        
        <p class="govuk-body">
            Please click on the verification link within 24 hours to confirm your change of email address.
        </p>

        @if (User.IsInRole(LoginRoles.GpgEmployer))
        {
            <p class="govuk-body">
                <a href="@Url.Action("ManageOrganisationsGet", "ManageOrganisations")"
                   class="govuk-link">
                    Back to Manage Employers
                </a>
            </p>
        }
        else
        {
            <p class="govuk-body">
                <a href="@Url.Action("AdminHomePage", "AdminHomepage")"
                   class="govuk-link">
                    Back to Admin homepage
                </a>
            </p>
        }
        <p class="govuk-body">
            <a href="@Url.Action("ManageAccountGet", "ManageAccount")"
               class="govuk-link">
                Back to Manage Account
            </a>
        </p>

    </div>
</div>
