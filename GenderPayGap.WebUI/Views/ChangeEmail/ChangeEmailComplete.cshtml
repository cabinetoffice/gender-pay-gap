@model string

@{
    ViewBag.Title = "Change email address - My Account - Gender pay gap service";
    Layout = "~/Views/GovUkFrontend/GovUkFrontendLayout.cshtml";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <div class="govuk-panel govuk-panel--confirmation">
            <h1 class="govuk-panel__title">
                Your email address has been changed
            </h1>
        </div>

        <p class="govuk-body">
            Your email address has been changed to
            <span class="govuk-!-font-weight-bold">@(Model)</span>
        </p>
        
        <p class="govuk-body">
            <a href="@Url.Action("ManageOrganisations", "Organisation")"
               class="govuk-link">
                Back to Manage Organisations
            </a>
        </p>
        <p class="govuk-body">
            <a href="@Url.Action("ManageAccount", "ManageAccount", new { Area = "Account" })"
               class="govuk-link">
                Back to Manage Account
            </a>
        </p>

    </div>
</div>
