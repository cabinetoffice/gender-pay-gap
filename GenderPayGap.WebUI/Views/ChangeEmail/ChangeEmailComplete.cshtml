@using GenderPayGap.WebUI.Helpers
@model string

@{
    ViewBag.Title = "Change email address - My Account - Gender pay gap service";
    Layout = "~/Views/GovUkFrontend/GovUkFrontendLayout.cshtml";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <div class="govuk-panel govuk-panel--confirmation">
            <h1 class="govuk-panel__title">
                Your email address has been changed
            </h1>
        </div>

        <p class="govuk-body">
            Your email address has been changed to
            <span class="govuk-!-font-weight-bold">@(Model)</span>
        </p>
        
        @if (User.IsInRole(LoginRoles.GpgEmployer))
        {
            <p class="govuk-body">
                <a href="@Url.Action("ManageOrganisationsGet", "ManageOrganisations")"
                   class="govuk-link">
                    Back to Manage Employers
                </a>
            </p>
        }
        else
        {
            <p class="govuk-body">
                <a href="@Url.Action("AdminHomePage", "AdminHomepage")"
                   class="govuk-link">
                    Back to Admin homepage
                </a>
            </p>
        }
        <p class="govuk-body">
            <a href="@Url.Action("ManageAccountGet", "ManageAccount")"
               class="govuk-link">
                Back to Manage Account
            </a>
        </p>

    </div>
</div>
