               href="@Url.Action("SortEmployers", new {column = "DiffMeanHourlyPayPercent", returnUrl = ViewBag.ReturnUrl})"
               role="button">
                <span class="visually-hidden">Sort by difference in hourly rate </span>
                Mean
            </a>
            <a class="no-print" aria-label="DiffMeanHourlyPayPercent" href="@Url.Action("SortEmployers", new {column = "DiffMeanHourlyPayPercent", returnUrl = ViewBag.ReturnUrl})">
