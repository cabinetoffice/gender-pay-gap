@using GovUkDesignSystem
@using GovUkDesignSystem.GovUkDesignSystemComponents
@model GenderPayGap.WebUI.Models.Account.ChooseNewPasswordViewModel

@{
    ViewBag.Title = "Choose a new password - Gender pay gap service";
    Layout = "~/Views/GovUkFrontend/GovUkFrontendLayout.cshtml";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        
        @await Html.GovUkErrorSummary(ViewData.ModelState)

        <h1 class="govuk-heading-xl">
            Choose a new password
        </h1>

        <form method="POST" action="@Url.Action("ChooseNewPasswordPost", "PasswordReset")">
            @(Html.AntiForgeryToken())

            @Html.HiddenFor(m => m.ResetCode)

            @(await Html.GovUkTextInputFor(
                m => m.NewPassword,
                labelOptions: new LabelViewModel {Text = "New password"},
                type: "password",
                classes: "govuk-input--width-20"
                ))

            @(await Html.GovUkTextInputFor(
                m => m.ConfirmNewPassword,
                labelOptions: new LabelViewModel {Text = "Confirm new password"},
                type: "password",
                classes: "govuk-input--width-20"
                ))

            @(await Html.GovUkButton(new ButtonViewModel
            {
                Text = "Confirm",
                Classes = "govuk-!-margin-bottom-4",
                PreventDoubleClick = true
            }))
        </form>
        
    </div>
</div>


